<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_color"
    tools:context=".NewTravel">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/gasoline_button"
                android:layout_width="wrap_content"
                android:layout_height="426px"
                android:layout_marginTop="32dp"
                android:src="@drawable/button_gasoline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lucida_console"
            android:text="Gasolina"
            android:textColor="?attr/text_color_reverse"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/gasoline_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/gasoline_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.44" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lucida_console"
            android:text="Calcula el gasto de \ngasolina de tu viaje"
            android:textColor="?attr/text_color_reverse"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/food_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.76"
            app:layout_constraintStart_toStartOf="@+id/gasoline_button"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.110000014" />


            <ImageView
                android:id="@+id/food_button"
                android:layout_width="wrap_content"
                android:layout_height="426px"
                android:layout_marginTop="32dp"
                android:src="@drawable/button_comida"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gasoline_button" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lucida_console"
            android:text="Comida"
            android:textColor="?attr/text_color_reverse"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/food_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.46"
            app:layout_constraintStart_toStartOf="@+id/gasoline_button"
            app:layout_constraintTop_toBottomOf="@+id/gasoline_button"
            app:layout_constraintVertical_bias="0.36" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lucida_console"
            android:text="Crea tu lista de \nla compra y organiza \nlos menús"
            android:textColor="?attr/text_color_reverse"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/people_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintStart_toStartOf="@+id/gasoline_button"
            app:layout_constraintTop_toBottomOf="@+id/text"
            app:layout_constraintVertical_bias="0.110000014" />

            <ImageView
                android:id="@+id/people_button"
                android:layout_width="wrap_content"
                android:layout_height="426px"
                android:layout_marginTop="32dp"
                android:src="@drawable/button_personas"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/food_button" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lucida_console"
            android:text="Personas"
            android:textColor="?attr/text_color_reverse"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/people_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/gasoline_button"
            app:layout_constraintTop_toBottomOf="@+id/food_button"
            app:layout_constraintVertical_bias="0.43" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lucida_console"
            android:text="Planifica la gente \nque va al viaje"
            android:textColor="?attr/text_color_reverse"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/people_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.71"
            app:layout_constraintStart_toStartOf="@+id/gasoline_button"
            app:layout_constraintTop_toBottomOf="@+id/text2"
            app:layout_constraintVertical_bias="0.110000014" />

        <ImageView
            android:id="@+id/stay_button"
            android:layout_width="wrap_content"
            android:layout_height="426px"
            android:layout_marginTop="32dp"
            android:src="@drawable/button_estancia"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/people_button" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lucida_console"
            android:text="Estancia"
            android:textColor="?attr/text_color_reverse"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/stay_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/gasoline_button"
            app:layout_constraintTop_toBottomOf="@+id/people_button"
            app:layout_constraintVertical_bias="0.42000002" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lucida_console"
            android:text="Organiza donde y \ncuando irás"
            android:textColor="?attr/text_color_reverse"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/stay_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.65"
            app:layout_constraintStart_toStartOf="@+id/gasoline_button"
            app:layout_constraintTop_toBottomOf="@+id/text3"
            app:layout_constraintVertical_bias="0.13" />

        <ImageView
            android:id="@+id/activities_button"
            android:layout_width="wrap_content"
            android:layout_height="426px"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/button_actividades"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stay_button"
            app:layout_constraintVertical_bias="0.25" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lucida_console"
            android:text="Actividades"
            android:textColor="?attr/text_color_reverse"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/activities_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.58"
            app:layout_constraintStart_toStartOf="@+id/gasoline_button"
            app:layout_constraintTop_toBottomOf="@+id/stay_button"
            app:layout_constraintVertical_bias="0.42000002" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/lucida_console"
            android:text="Planea todas las \nsalidas que harás"
            android:textColor="?attr/text_color_reverse"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/activities_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.65"
            app:layout_constraintStart_toStartOf="@+id/gasoline_button"
            app:layout_constraintTop_toBottomOf="@+id/text4"
            app:layout_constraintVertical_bias="0.26" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
