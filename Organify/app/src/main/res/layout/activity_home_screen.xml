<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_image"
    tools:context=".HomeScreen">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/world_icon_logo" />

    <ImageView
        android:id="@+id/load_travel_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="140dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/new_travel_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/button_lake_blue"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/lucida_console"
        android:text="Mis viajes"
        android:textColor="?attr/text_color_reverse"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/new_travel_button"
        app:layout_constraintEnd_toEndOf="@+id/load_travel_button"
        app:layout_constraintStart_toStartOf="@+id/load_travel_button"
        app:layout_constraintTop_toTopOf="@+id/load_travel_button" />

    <ImageView
        android:id="@+id/new_travel_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="32dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/button_lake_blue"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Planificar viaje"
        android:textColor="?attr/text_color_reverse"
        android:textSize="30sp"
        android:fontFamily="@font/lucida_console"
        app:layout_constraintBottom_toBottomOf="@+id/new_travel_button"
        app:layout_constraintEnd_toEndOf="@+id/new_travel_button"
        app:layout_constraintStart_toStartOf="@+id/new_travel_button"
        app:layout_constraintTop_toTopOf="@+id/new_travel_button" />
</androidx.constraintlayout.widget.ConstraintLayout>
